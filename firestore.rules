rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the document owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth.token.admin == true || request.auth.token.superAdmin == true;
    }
    
    // Helper function to check if user is a super admin
    function isSuperAdmin() {
      return request.auth.token.superAdmin == true;
    }
    
    // Helper function to check if user is a delegate
    function isDelegate() {
      return request.auth.token.delegate == true || isAdmin();
    }
    
    // Orders collection - customers can read their own, delegates/admins can read all
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        isAdmin() || 
        isDelegate() || 
        resource.data.customerId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isAdmin() || 
        isDelegate() || 
        resource.data.customerId == request.auth.uid
      );
      allow delete: if isAdmin();
    }
    
    // Users collection - users can read/update their own profile
    match /users/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow delete: if isSuperAdmin();
    }
    
    // Service packages - public read, admin write
    match /packages/{packageId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Blog posts - public read, admin write
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Testimonials - public read, admin write
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Gallery items - public read, admin write
    match /gallery/{galleryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Contact messages - anyone can create, only admin can read
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // Loyalty config - public read, super admin write
    match /loyaltyConfig/{configId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Referrals - users can read their own referrals
    match /referrals/{referralId} {
      allow read: if isAuthenticated() && (
        isAdmin() || 
        resource.data.referrerId == request.auth.uid ||
        resource.data.referredId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // Audit logs - super admin only
    match /auditLogs/{logId} {
      allow read: if isSuperAdmin();
      allow create: if isAdmin();
      allow update, delete: if false;
    }
    
    // Delegate locations - for real-time tracking
    match /delegateLocations/{delegateId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isOwner(delegateId) || isAdmin());
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
