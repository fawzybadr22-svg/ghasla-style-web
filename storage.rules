rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth.token.admin == true || request.auth.token.superAdmin == true;
    }
    
    // Helper function to check if user is a delegate
    function isDelegate() {
      return request.auth.token.delegate == true || isAdmin();
    }
    
    // Check file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Order photos - delegates can upload, customers can view their own
    match /orders/{orderId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isDelegate() && isValidSize() && isImage();
    }
    
    // User profile images
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin()) && isValidSize() && isImage();
    }
    
    // Gallery images - public read, admin write
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidSize() && isImage();
    }
    
    // Blog images - public read, admin write
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidSize() && isImage();
    }
    
    // Testimonial images - public read, admin write
    match /testimonials/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidSize() && isImage();
    }
    
    // Service package images - public read, admin write
    match /packages/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidSize() && isImage();
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
